<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ozeken.expensecalendar.mapper.GenreMapper">

<!-- 
すべてのジャンルをリストで取得するSQL。
主にジャンル別絞り込みで呼び出して使用する。
 -->
<select id="selectAllGenre" resultType="com.ozeken.expensecalendar.entity.Genre">

SELECT id, name FROM genres;

</select>

<!-- IDで指定してジャンルを一件取得するSQL。
主にジャンル別絞り込みで呼び出して使用する。 -->
<select id="selectGenreById" resultType="com.ozeken.expensecalendar.entity.Genre">
    SELECT id, name FROM genres WHERE id = #{id}
</select>

</mapper>